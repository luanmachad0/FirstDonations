@using Microsoft.AspNetCore.Identity
@using FirstDonations.Areas.Identity.Data;
@model FirstDonations.ViewModels.ProfileViewModel;


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var user = await UserManager.GetUserAsync(User);
}
<a href="../Home/Index"> Back to home </a>
@if (String.IsNullOrEmpty(Model.ProfileImage))
{
    <center>
        <button class="dropbtn fas fa-user fa-1x" width="210"
                height="170"></button>
    </center>
}
else
{
    <center>
        <img src="~/img/@Model.ProfileImage"
             class="dropimg"
             width="210"
             height="170"
             style="border: 2px solid #007bff;"
             asp-append-version="true" />
    </center>
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-4 align-self-center">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Team Name</label>
                    <input asp-for="@Model.TeamName" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="@Model.UserName" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label>Team Number</label>
                    <input asp-for="@Model.TeamNumber" class="form-control" disabled />
                    <span asp-validation-for="@Model.TeamNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Phone Number</label>
                    <input asp-for="@Model.PhoneNumber" class="form-control" disabled />
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
                <a id="update-profile-button" href="mailto:@Model.UserName" class="btn btn-primary form-control">Contact</a>
            </form>
        </div>
    </div>
</div>