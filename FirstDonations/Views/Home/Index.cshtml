@model IEnumerable<FirstDonations.Models.Part>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center">See what community is donating</h4>

@*<p>
        <a asp-action="New" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i> Add New</a>
    </p>*@

<div class="container">

    <div class="section">


        <div class="row">
            @foreach (var part in Model)
            {
                <div class="col s12 m4 flex-grow-0 pb-3">
                    <div class="card" style="width: 18rem;">
                        <img src="~/img/@part.Image"
                             class="card-img-top"
                             width="210"
                             height="170"
                             asp-append-version="true" />
                        <div class="card-body">
                            <h5 class="card-title">@part.Name</h5>
                            <p class="card-text">@part.Area, @part.Count</p>
                            @if (ViewBag.userId != part.OwnerTeam)
                            {
                                <a href="@Url.Action("Create", "Donations", new { Id = part.Id })" class="btn btn-primary">Request</a>
                            }
                            else
                            {
                                <a href="@Url.Action("Create", "Donations", new { Id = part.Id })" class="btn btn-primary disabled">Request</a>
                            }
                            <button class="btn-details btn btn-primary" asp-action="PartDetails" data-id="@part.Id">Details</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div id="modal" class="modal fade" role="dialog" />

@section scripts{
    <script>
        $(function () {
            $(".btn-details").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("/Home/PartDetails?id=" + id, function () {
                    $("#modal").modal();
                })
            });
        })
    </script>
}

