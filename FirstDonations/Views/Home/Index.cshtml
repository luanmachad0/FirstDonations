@model IEnumerable<FirstDonations.Models.Part>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center text-uppercase">List of employee</h4>

<p>
    <a asp-action="New" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i> Add New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Area)</th>
            <th>@Html.DisplayNameFor(model => model.Count)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var part in Model)
        {
            <tr>
                <td>
                    <img src="~/img/@part.Image"
                         class="rounded-circle"
                         height="40" width="40"
                         asp-append-version="true" />
                    @part.Name
                </td>
                <td>@part.Area</td>
                <td>@part.Count</td>
            </tr>
        }
    </tbody>
</table>   